<Window x:Class="WpfWriteableBitmap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWriteableBitmap"
        mc:Ignorable="d"
        Title="WriteableBitmap" Height="400" Width="450" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Image Name="imgPanel"/>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button  Name="btnStart" Content="Start" Margin="2" />
            <Button  Name="btnSave"  Content="Save" Margin="2" />
            <Button  Name="btnGrph"  Content="draw" Margin="2" />
        </StackPanel>
        
    </Grid>
</Window>
